<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#E6918F</item>
        <item name="android:textColorPrimary">@color/textOnPrimary</item>
        <item name="android:textColorSecondary">@color/textOnPrimary</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ActionBatTheme" parent="AppTheme">
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/textOnSecondary</item>
        <item name="android:textColorSecondary">@color/textOnSecondary</item>
        <item name="actionMenuTextColor">@color/textOnSecondary</item>

    </style>

</resources>