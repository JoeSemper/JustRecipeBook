<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:textColorPrimary">@color/textOnPrimary</item>
        <item name="android:textColorSecondary">@color/textOnPrimary</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="SearchViewTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_main_color</item>
        <item name="android:textColorSecondary">@color/text_secondary_color</item>
        <item name="actionMenuTextColor">@color/text_secondary_color</item>
        <item name="android:textColor">@color/text_main_color</item>
    </style>

</resources>